<%- include ("includes/header", {
    "title": "My shared links"
}) %>
<div class="background" style="position: absolute; z-index: -1;"></div>

<div id="mySharedLinksApp" style="margin-bottom: 80px;">
    <div class="container" id="features">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 style="color: rgb(61 69 114);">Your Shared Links</h1>
                <h3 style="margin-top: 40px; color: rgb(61 69 114);">Manage and share your files easily with SkyVault.</h3>
            </div>
        </div>
    </div>
    
    <div class="container text-center">
        <div class="row">
            <%
                links.forEach(function (link) {
                    const singleFile = link.file;
            %>
                <div class="col-md-4" style="margin-top: 30px;">
                    <div class="card glass" style="width: 18rem; height: 100%; border-radius: 25px; color: white; background-color: transparent; box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(255, 255, 255, 0.6) 0px 30px 60px -30px, rgba(255, 255, 255, 0.6) 0px -2px 6px 0px inset;">
                        <div class="card-body text-center">
                            <i class="fa fa-file-text-o" style="color: #000;"></i>
                            <p class="card-text" style="color: #000"><%= singleFile.name %></p>
                            <a href="/SharedViaLink/<%= link.hash %>" class="btn btn-primary" target="_blank">View</a>
                            <form method="POST" action="/DeleteLink" class="d-inline"
                                onsubmit="return confirm('Are you sure you want to delete this link ?');">
                                <input type="hidden" name="_id" value="<%= link._id %>" required />
                                <input type="submit" class="btn btn-danger" value="Delete" />
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<script>
    const mySharedLinksApp = Vue.createApp({
        data() {
          return {
              mainURL: baseUrl,
          }
        }
    });
    mySharedLinksApp.mount("#mySharedLinksApp");
</script>

<%- include ("includes/footer") %>
